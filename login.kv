#:include connected.kv

<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,0]
        spacing: 50

        Label:
            text: 'Welcome to Govt. Hub'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Email'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Sign in'
            font_size: 24

            on_press: root.do_login(login.text, password.text)
			
		
		Button:
			text: "Haven't registered? Sign up now"
			font_size: 14
